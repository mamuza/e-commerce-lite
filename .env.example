# Copy to .env and fill in values.

# PostgreSQL connection string (used by Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_lite?schema=public"

# Nuxt runtime config (server-only). Prefix with NUXT_ to override in env.
NUXT_DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_lite?schema=public"
NUXT_SESSION_SECRET="change-me-to-a-long-random-string"
NUXT_SESSION_COOKIE_NAME="ecommerce_session"
NUXT_SESSION_MAX_AGE="604800"
